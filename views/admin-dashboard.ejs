    // User management functions
    function suspendUser(userId) {
        if (confirm('Are you sure you want to suspend this user?')) {
            console.log('Suspending user:', userId);
            alert('User suspended successfully!');
        }
    }
    
    function activateUser(userId) {
        if (confirm('Are you sure you want to activate this user?')) {
            console.log('Activating user:', userId);
            alert('User activated successfully!');
        }
    }
    
    function deleteUser(userId, username) {
        if (confirm(`Are you sure you want to delete user "${username}"? This action cannot be undone.`)) {
            console.log('Deleting user:', userId);
            alert('User deleted successfully!');
        }
    }
    
    // Business management functions
    function approveBusiness(businessId) {
        if (confirm('Are you sure you want to approve this business?')) {
            console.log('Approving business:', businessId);
            alert('Business approved successfully!');
        }
    }
    
    function rejectBusiness(businessId) {
        if (confirm('Are you sure you want to reject this business?')) {
            console.log('Rejecting business:', businessId);
            alert('Business rejected successfully!');
        }
    }
    
    function suspendBusiness(businessId) {
        if (confirm('Are you sure you want to suspend this business?')) {
            console.log('Suspending business:', businessId);
            alert('Business suspended successfully!');
        }
    }
    
    function reactivateBusiness(businessId) {
        if (confirm('Are you sure you want to reactivate this business?')) {
            console.log('Reactivating business:', businessId);
            alert('Business reactivated successfully!');
        }
    }
    
    function deleteBusiness(businessId, businessName) {
        if (confirm(`Are you sure you want to delete "${businessName}"? This action cannot be undone.`)) {
            console.log('Deleting business:', businessId);
            alert('Business deleted successfully!');
        }
    }
    
    // Initialize Lucide icons
    lucide.createIcons();
</script>