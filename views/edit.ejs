<%= layout("layouts/boilerplate") %>
<h1 style="text-align:center;">Edit Business</h1>
<form action="/edit/<%= business._id %>?_method=PUT" method="POST" class="centered-form" enctype="multipart/form-data">
    <div class="form-group">
        <label for="name">Business Name</label>
        <input type="text" id="name" name="Name" class="form-control" value="<%= business.Name %>" required>
    </div>
    <div class="form-group">
        <label for="category">Category</label>
        <select id="category" name="Category" class="form-control" required>
            <option value="Restaurant" <%= business.Category === 'Restaurant' ? 'selected' : '' %>>Restaurant</option>
            <option value="Services" <%= business.Category === 'Services' ? 'selected' : '' %>>Services</option>
            <option value="Dealership" <%= business.Category === 'Dealership' ? 'selected' : '' %>>Dealership</option>
            <option value="Cafe" <%= business.Category === 'Cafe' ? 'selected' : '' %>>Cafe</option>
            <option value="Shops" <%= business.Category === 'Shops' ? 'selected' : '' %>>Shops</option>
        </select>
    </div>
    <div class="form-group">
        <label for="description">Description</label>
        <textarea id="description" name="description" class="form-control" required><%= business.description %></textarea>
    </div>
    <div class="form-group">
        <label for="email">Email</label>
        <input type="email" id="email" name="email" class="form-control" value="<%= business.email %>" required>
    </div>
    <div class="form-group">
        <label for="Contact">Contact</label>
        <input type="text" id="contact" name="Contact" class="form-control" value="<%= business.Contact %>" minlength="10" maxlength="10" required>
    </div>
    <div class="form-group">
        <label for="address">Address</label>
        <input type="text" id="address" name="address" class="form-control" value="<%= business.address %>" required>
    </div>
    <div class="form-group">
        <label for="Image">Image URL</label>
        <input type="file" id="Image" name="image" class="form-control" value="<%= business.Image ? business.Image.url : '' %>">
    </div>
    <button type="submit" class="btn btn-primary">Update Business</button>
</form>