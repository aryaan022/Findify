<%= layout('./layouts/boilerplate') %>
<style>
  #map {
    height: 400px;
    width: 100%;
  }
</style>
<div class="bg-light d-flex flex-column min-vh-100">
  <main class="flex-grow-1 ">
    <!-- Hero Section -->
    <section class="bg-primary text-white text-center py-5">
      <div class="container">
        <h1 class="display-5 fw-bold mb-3">Discover Local Businesses</h1>
        <p class="lead">
          Find the perfect local businesses for all your needs across India
        </p>

        <!-- Search Form -->
        <div class="row justify-content-center mt-4">
          <div class="col-lg-10">
            <form class="bg-white p-4 rounded shadow">
              <div class="row g-3">
                <div class="col-md-4">
                  <label for="search" class="form-label">
                    <i data-lucide="search" class="me-1"></i> Search
                  </label>
                  <input
                    type="text"
                    id="search"
                    name="search"
                    class="form-control"
                    placeholder="Business name or keywords"
                  />
                </div>
                <div class="col-md-4">
                  <label for="category" class="form-label">
                    <i data-lucide="tag" class="me-1"></i> Category
                  </label>
                  <select id="category" name="category" class="form-select">
                    <option>All Categories</option>
                    <option>Retail</option>
                    <option>Food</option>
                    <option>Services</option>
                    <option>Books</option>
                  </select>
                </div>
                <div class="col-md-4">
                  <label for="location" class="form-label">
                    <i data-lucide="map-pin" class="me-1"></i> Location
                  </label>
                  <input
                    type="text"
                    id="location"
                    name="location"
                    class="form-control"
                    placeholder="City or state"
                  />
                </div>
              </div>
              <div class="mt-4">
                <button type="submit" class="btn btn-primary px-4">
                  <i data-lucide="search" class="me-1"></i> Search Businesses
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </section>

    <!-- Map Section -->
    <section class="py-5 bg-white">
      <div class="container">
        <h2 class="h4 fw-bold mb-3">Businesses Near You</h2>
        <div id="map" class="rounded shadow"></div>
      </div>
    </section>

    <!-- Results Section -->
    <section class="py-5">
      <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-4">
          <h2 class="h4 fw-bold">5 Businesses Found</h2>
          <a href="#" class="text-decoration-none text-primary small">
            <i data-lucide="rotate-ccw" class="me-1"></i> Clear All Filters
          </a>
        </div>

        <div class="row g-4">
          <div class="col-md-6 col-lg-4">
            <div class="card h-100 shadow-sm border-0">
              <div class="card-body">
                <h5 class="card-title mb-1">Coffee House</h5>
                <p class="text-primary mb-2">Cafe</p>
                <p class="text-muted small mb-3">Best coffee in town...</p>
                <p class="small text-muted mb-1">
                  <i data-lucide="map-pin" class="me-1"></i> Mumbai, Maharashtra
                </p>
                <p class="small text-muted mb-3">
                  <i data-lucide="phone" class="me-1"></i> +91 9876543210
                </p>
                <a href="#" class="btn btn-outline-primary w-100"
                  >View Details</a
                >
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Categories -->
    <section class="py-5 bg-light">
      <div class="container text-center">
        <h2 class="h3 fw-bold mb-4">Browse by Category</h2>
        <div class="row g-4">
          <div class="col-6 col-md-3">
            <a
              href="#"
              class="card shadow-sm h-100 text-decoration-none text-dark"
            >
              <div class="card-body">
                <i data-lucide="coffee" class="mb-2 text-primary"></i>
                <h6>Coffee & Tea</h6>
              </div>
            </a>
          </div>
          <div class="col-6 col-md-3">
            <a
              href="#"
              class="card shadow-sm h-100 text-decoration-none text-dark"
            >
              <div class="card-body">
                <i data-lucide="shopping-bag" class="mb-2 text-success"></i>
                <h6>Retail</h6>
              </div>
            </a>
          </div>
          <div class="col-6 col-md-3">
            <a
              href="#"
              class="card shadow-sm h-100 text-decoration-none text-dark"
            >
              <div class="card-body">
                <i data-lucide="utensils" class="mb-2 text-warning"></i>
                <h6>Food</h6>
              </div>
            </a>
          </div>
          <div class="col-6 col-md-3">
            <a
              href="#"
              class="card shadow-sm h-100 text-decoration-none text-dark"
            >
              <div class="card-body">
                <i data-lucide="book" class="mb-2 text-info"></i>
                <h6>Books</h6>
              </div>
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Call to Action -->
    <section class="py-5 bg-primary text-center text-white">
      <div class="container">
        <h2 class="h3 fw-bold mb-3">Own a Business?</h2>
        <p class="lead mb-4">
          Join our platform and reach thousands of customers.
        </p>
        <a href="#" class="btn btn-light text-primary px-4"
          >Register Your Business</a
        >
      </div>
    </section>
  </main>
</div>
<!-- Bootstrap 5 JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
<script>
  lucide.createIcons();
</script>
