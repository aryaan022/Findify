<%= layout('/layouts/boilerplate') %>

<div id="loader" class="loader">
  <div class="spinner"></div>
</div>

<style>
  #map {
    height: 400px;
    width: 100%;
  }
</style>

<div class="bg-light d-flex flex-column min-vh-100">
  <main class="flex-grow-1 ">
        <!-- Hero Section -->
        <section class="bg-primary text-white text-center py-5">
          <div class="container">
            <h1 class="display-5 fw-bold mb-3">Discover Local Businesses</h1>
            <p class="lead">
              Find the perfect local businesses for all your needs across India
            </p>

            <!-- Search Form -->
            <form action="/discover" method="GET" class="bg-white p-4 rounded shadow">
              <div class="row g-3">
                <div class="col-md-4">
                  <label for="search" class="form-label">
                    <i data-lucide="search" class="me-1"></i> Search
                  </label>
                  <input type="text" id="search" name="search" class="form-control"
                    placeholder="Business name or keywords" />
                </div>

                <div class="col-md-4">
                  <label for="category" class="form-label">
                    <i data-lucide="tag" class="me-1"></i> Category
                  </label>
                  <select id="category" name="category" class="form-select">
                    <option>All Categories</option>
                    <option>Retail</option>
                    <option>Food</option>
                    <option>Services</option>
                    <option>Books</option>
                  </select>
                </div>

                <div class="col-md-4">
                  <label for="location" class="form-label">
                    <i data-lucide="map-pin" class="me-1"></i> Location
                  </label>
                  <input type="text" id="location" name="location" class="form-control" placeholder="City or state" />
                </div>
              </div>

              <div class="mt-4">
                <button type="submit" class="btn btn-primary px-4">
                  <i data-lucide="search" class="me-1"></i> Search Businesses
                </button>
              </div>
            </form>

        </section>

        <!-- Map Section -->
        <section class="py-5 bg-white">
          <div class="container">
            <h2 class="h4 fw-bold mb-3">Businesses Near You</h2>
            <div id="map" class="rounded shadow"></div>
          </div>
        </section>

        <!-- Results Section -->
        <section class="py-5">
          <div class="container">
            <div class="d-flex justify-content-between align-items-center mb-4">
              <h2 class="h4 fw-bold">
                <%= businesses.length %> Businesses Found
              </h2>
              <a href="#" class="text-decoration-none text-primary small">
                <i data-lucide="rotate-ccw" class="me-1"></i> Clear All Filters
              </a>
            </div>

            <div class="row g-4">
              <% if (businesses.length> 0) { %>
                <% businesses.forEach(b=> { %>
                  <div class="col-md-6 col-lg-4">
                    <div class="card h-100 shadow-sm border-0">

                      <!-- ✅ Business Image -->
                      <% if (b.Image && b.Image.url) { %>
                        <img src="<%= b.Image.url %>" class="card-img-top" alt="<%= b.Name %>">
                        <% } else { %>
                          <img src="https://via.placeholder.com/400x200?text=No+Image" class="card-img-top"
                            alt="No image">
                          <% } %>

                            <div class="card-body">
                              <!-- ✅ Business Name -->
                              <h5 class="card-title mb-1">
                                <%= b.Name %>
                              </h5>

                              <!-- ✅ Category -->
                              <p class="text-primary mb-2">
                                <%= b.Category %>
                              </p>

                              <!-- ✅ Short description -->
                              <p class="text-muted small mb-3">
                                <%= b.description && b.description.length> 60
                                  ? b.description.substring(0, 60) + "..."
                                  : b.description %>
                              </p>

                              <!-- ✅ Address -->
                              <p class="small text-muted mb-1">
                                <i data-lucide="map-pin" class="me-1"></i>
                                <%= b.address %>
                              </p>

                              <!-- ✅ Contact -->
                              <p class="small text-muted mb-3">
                                <i data-lucide="phone" class="me-1"></i>
                                <%= b.Contact %>
                              </p>

                              <!-- ✅ Link to show page -->
                              <a href="/show/<%= b._id %>" class="btn btn-outline-primary w-100">View Details</a>
                            </div>
                    </div>
                  </div>
                  <% }) %>
                    <% } else { %>
                      <p class="text-muted">No businesses found.</p>
                      <% } %>
            </div>


        </section>

        <!-- Categories -->
        <section class="py-5 bg-light">
          <div class="container text-center">
            <h2 class="h3 fw-bold mb-4">Browse by Category</h2>
            <div class="row g-4">
              <div class="col-6 col-md-3">
                <a href="#" class="card shadow-sm h-100 text-decoration-none text-dark">
                  <div class="card-body">
                    <i data-lucide="coffee" class="mb-2 text-primary"></i>
                    <h6>Coffee & Tea</h6>
                  </div>
                </a>
              </div>
              <div class="col-6 col-md-3">
                <a href="#" class="card shadow-sm h-100 text-decoration-none text-dark">
                  <div class="card-body">
                    <i data-lucide="shopping-bag" class="mb-2 text-success"></i>
                    <h6>Retail</h6>
                  </div>
                </a>
              </div>
              <div class="col-6 col-md-3">
                <a href="#" class="card shadow-sm h-100 text-decoration-none text-dark">
                  <div class="card-body">
                    <i data-lucide="utensils" class="mb-2 text-warning"></i>
                    <h6>Food</h6>
                  </div>
                </a>
              </div>
              <div class="col-6 col-md-3">
                <a href="#" class="card shadow-sm h-100 text-decoration-none text-dark">
                  <div class="card-body">
                    <i data-lucide="book" class="mb-2 text-info"></i>
                    <h6>Books</h6>
                  </div>
                </a>
              </div>
            </div>
          </div>
        </section>

        <!-- Call to Action -->
        <section class="py-5 bg-primary text-center text-white">
          <div class="container">
            <h2 class="h3 fw-bold mb-3">Own a Business?</h2>
            <p class="lead mb-4">
              Join our platform and reach thousands of customers.
            </p>
            <a href="#" class="btn btn-light text-primary px-4">Register Your Business</a>
          </div>
        </section>
      </main>
    </div>

    <script>// used for searching current location
      document.addEventListener("DOMContentLoaded", () => {
        const params = new URLSearchParams(window.location.search);

        // Run only if lat/lng are not already present
        if (!params.has("lat") && !params.has("lng")) {
          if (navigator.geolocation) {
            navigator.geolocation.getCurrentPosition(pos => {
              const lat = pos.coords.latitude;
              const lng = pos.coords.longitude;
              window.location.href = `/discover?lat=${lat}&lng=${lng}`;
            });
          }
        }
      });
    </script>
    <style>
      .footer-link {
        text-decoration: none;
        color: #555;
        transition: color 0.2s ease-in-out;
      }

      .footer-link:hover {
        color: #007bff;
        /* Bootstrap primary color */
      }
    </style>
    <script>
      lucide.createIcons();
    </script>
    <script src="/js/loading.js"></script>