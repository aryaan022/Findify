/* /public/css/navbar.css */

/* --- Keyframes for Animations --- */
@keyframes fadeIn {
  from { opacity: 0; transform: translateY(-10px); }
  to { opacity: 1; transform: translateY(0); }
}

/* --- Main Navbar Styling (Top of Page) --- */
.navbar {
  padding: 1rem 0;
  /* Add a subtle dark gradient at the top to ensure text is always readable */
  background: linear-gradient(to bottom, rgba(0, 0, 0, 0.6), transparent);
  /* Smooth transition for all property changes */
  transition: background-color 0.4s ease-in-out, backdrop-filter 0.4s ease-in-out, box-shadow 0.4s ease-in-out, padding 0.4s ease-in-out;
}

/* --- Style for When the User Scrolls Down --- */
.navbar-scrolled {
  background-color: rgba(13, 17, 23, 0.75); /* A professional, near-black glassy background */
  backdrop-filter: blur(12px);
  box-shadow: 0 5px 20px rgba(0, 0, 0, 0.25);
  padding: 0.75rem 0; /* Make the navbar slightly slimmer on scroll */
  background-image: none; /* Remove the gradient when scrolled */
}

/* --- Nav Link Styling & Hover Effect --- */
.navbar .nav-link {
  position: relative;
  color: #ffffff;
  font-weight: 500;
  padding: 0.5rem 1rem;
  border-radius: 50px; /* Pill shape for the background hover */
  z-index: 1;
  transition: color 0.3s ease;
  /* Add a text-shadow to make text pop on any background */
  text-shadow: 0 1px 3px rgba(0,0,0,0.4);
}

/* The background pill for hover/active states, initially hidden */
.navbar .nav-link::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(255, 255, 255, 0.15);
  border-radius: 50px;
  transform: scale(0);
  z-index: -1;
  transition: transform 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
}

/* On hover or when active, scale the pill into view */
.navbar .nav-link:hover::before,
.navbar .nav-link.active::before {
  transform: scale(1);
}

.navbar .nav-link:hover {
    color: #ffffff;
}

/* Style for the active page link */
.navbar .nav-link.active {
    font-weight: 600;
}

/* --- Button & Dropdown Styling --- */
.navbar .btn {
  transition: transform 0.2s ease-out, box-shadow 0.2s ease-out;
}

.navbar .btn:hover {
  transform: translateY(-2px);
  box-shadow: 0 4px 10px rgba(0,0,0,0.2);
}

.navbar .dropdown-menu {
  background-color: rgba(25, 30, 40, 0.98);
  backdrop-filter: blur(10px);
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: 0.5rem;
  animation: fadeIn 0.3s ease forwards;
}

.navbar .dropdown-item {
    color: #f0f0f0;
}

.navbar .dropdown-item:hover {
    background-color: rgba(255, 255, 255, 0.1);
    color: #ffffff;
}
</style>
