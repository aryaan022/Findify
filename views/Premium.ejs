<%- layout("layouts/boilerplate.ejs") %>
    <style>
        body {
            font-family: 'Inter', sans-serif;
            background-color: #f8fafc; /* slate-50 */
            color: #334155; /* slate-700 */
            overflow-x: hidden;
        }

        /* Header text shimmer effect for light background */
        .shimmer-text {
            background-image: linear-gradient(-75deg, #4f46e5 30%, #7c3aed 50%, #4f46e5 70%);
            background-size: 200% auto;
            -webkit-background-clip: text; -webkit-text-fill-color: transparent;
            background-clip: text; text-fill-color: transparent;
            animation: shimmer 4s linear infinite;
        }
        @keyframes shimmer {
            to { background-position: -200% center; }
        }
        
        /* Premium Feature Card Styling for light background */
        .feature-card-premium {
            position: relative;
            background-color: #ffffff;
            border: 1px solid #e2e8f0; /* slate-200 */
            transition: all 0.4s ease;
            transform: perspective(1000px);
            height: 100%;
        }
        .feature-card-premium:hover {
            transform: translateY(-10px) rotateX(5deg);
            border-color: #4f46e5;
            box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.1);
        }
        .feature-card-premium .icon-container {
            display: inline-block;
            background-color: rgba(79, 70, 229, 0.1);
            color: #4f46e5; /* indigo-600 */
            transition: all 0.4s ease;
        }
        .feature-card-premium:hover .icon-container {
            transform: scale(1.1) translateY(-5px);
            filter: drop-shadow(0 0 15px rgba(129, 140, 248, 0.5));
        }

        /* "Coming Soon" Locked Button with Scanline Animation for light background */
        .locked-button {
            position: relative;
            background-color: transparent;
            border: 2px solid #cbd5e1; /* slate-300 */
            color: #94a3b8; /* slate-400 */
            cursor: not-allowed;
            overflow: hidden;
            transition: all 0.3s ease;
        }
        .locked-button::before { /* Scanline effect */
            content: '';
            position: absolute;
            top: -100%;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(to bottom, rgba(79, 70, 229, 0) 0%, rgba(79, 70, 229, 0.1) 50%, rgba(79, 70, 229, 0) 100%);
            animation: scan 3s linear infinite;
        }
        @keyframes scan {
            from { top: -100%; }
            to { top: 100%; }
        }
        .locked-button .lock-icon {
            transition: transform 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
        }
        .locked-button:hover {
            border-color: #4f46e5;
            color: #4f46e5;
            box-shadow: 0 0 25px rgba(79, 70, 229, 0.2);
        }
        .locked-button:hover .lock-icon {
            transform: scale(1.2) rotate(-10deg);
        }
    </style>
