<%- layout('layouts/boilerplate') %>

<style>
    /* Styling for the new animated About Us page */

/* Fade-in animation for sections on scroll */
@keyframes fadeInUp {
    from {
        opacity: 0;
        transform: translateY(40px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.fade-in-section {
    opacity: 0; /* Initially hidden */
    animation: fadeInUp 1s ease-out forwards;
    animation-play-state: paused; /* Animation is paused until triggered */
}

/* Timeline style for 'Our Story' */
.timeline {
    position: relative;
    padding: 2rem 0;
    list-style: none;
}
.timeline::before {
    content: '';
    position: absolute;
    top: 0;
    left: 18px;
    height: 100%;
    width: 4px;
    background: #e9ecef;
}
.timeline-item {
    position: relative;
    margin-bottom: 2rem;
    padding-left: 40px;
}
.timeline-item::before {
    content: '';
    position: absolute;
    left: 10px;
    top: 5px;
    width: 20px;
    height: 20px;
    border-radius: 50%;
    background: white;
    border: 4px solid var(--bs-primary);
}

/* Team Card styling and hover effect */
.team-card {
    transition: transform 0.3s ease, box-shadow 0.3s ease;
}
.team-card:hover {
    transform: translateY(-10px);
    box-shadow: 0 15px 30px rgba(0,0,0,0.1);
}
.team-card img {
    filter: grayscale(80%);
    transition: filter 0.3s ease;
}
.team-card:hover img {
    filter: grayscale(0%);
}
.team-card .social-links {
    opacity: 0;
    transition: opacity 0.3s ease;
}
.team-card:hover .social-links {
    opacity: 1;
}

  @keyframes fadeInUp {
    from {
        opacity: 0;
        transform: translateY(40px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.fade-in-section {
    opacity: 0;
    animation: fadeInUp 1s ease-out forwards;
    animation-play-state: paused;
}
</style>

