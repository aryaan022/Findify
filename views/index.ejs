<style>
    
  /* Keyframe for the sweeping light effect */
    @keyframes shimmer {
        0% { transform: translateX(-100%) skewX(-20deg); }
        100% { transform: translateX(200%) skewX(-20deg); }
    }

    /* Keyframe for the subtle pulsing glow */
    @keyframes glow {
        0%, 100% { box-shadow: 0 0 15px rgba(255, 255, 255, 0.1); }
        50% { box-shadow: 0 0 30px rgba(255, 255, 255, 0.25); }
    }

    /* Professional Search Bar Styles */
    .search-form {
        width: 100%;
        margin: 0 auto;
    }

    .search-container {
        position: relative;
        background: rgba(255, 255, 255, 0.98);
        backdrop-filter: blur(10px);
        border-radius: 50px;
        box-shadow: 0 15px 35px rgba(0, 0, 0, 0.15);
        border: 2px solid rgba(255, 255, 255, 0.3);
        overflow: hidden;
        transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    }

    .search-container:hover {
        box-shadow: 0 20px 50px rgba(102, 126, 234, 0.25);
        border-color: rgba(102, 126, 234, 0.4);
        transform: translateY(-3px);
    }

    .search-container:focus-within {
        box-shadow: 0 20px 50px rgba(102, 126, 234, 0.3);
        border-color: rgba(102, 126, 234, 0.6);
        transform: translateY(-3px);
    }

    .search-input-group {
        display: flex;
        align-items: center;
        padding: 0.5rem;
        gap: 0.5rem;
    }

    .search-icon {
        color: #6c757d;
        margin-left: 1rem;
        width: 20px;
        height: 20px;
        flex-shrink: 0;
    }

    .search-input {
        flex: 1;
        border: none;
        outline: none;
        background: transparent;
        font-size: 1rem;
        padding: 0.75rem 1rem;
        color: #333;
        font-weight: 500;
        transition: all 0.3s ease;
    }

    .search-input::placeholder {
        color: #9ca3af;
        font-weight: 400;
    }

    .search-input:focus {
        color: #667eea;
    }

    .search-input:focus::placeholder {
        color: #d1d5db;
    }

    .search-category {
        border: none;
        outline: none;
        background: transparent;
        color: #333;
        font-size: 0.9rem;
        padding: 0.5rem;
        border-left: 1px solid #e9ecef;
        margin-left: 0.5rem;
        min-width: 120px;
        cursor: pointer;
    }

    .search-category:focus {
        background: rgba(0, 123, 255, 0.05);
        border-radius: 8px;
    }

    .search-btn {
        background: linear-gradient(135deg, #667eea, #764ba2);
        border: none;
        color: white;
        padding: 0.75rem 2rem;
        border-radius: 25px;
        font-weight: 700;
        cursor: pointer;
        transition: all 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        display: flex;
        align-items: center;
        gap: 0.5rem;
        margin-right: 0.5rem;
        position: relative;
        overflow: hidden;
    }

    .search-btn::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
        transition: left 0.5s;
    }

    .search-btn:hover {
        background: linear-gradient(135deg, #5a6fd8, #6a4190);
        transform: translateY(-2px);
        box-shadow: 0 8px 20px rgba(102, 126, 234, 0.4);
    }

    .search-btn:hover::before {
        left: 100%;
    }

    .search-btn:active {
        transform: translateY(0);
    }

    .search-btn-icon {
        width: 16px;
        height: 16px;
    }

    /* Responsive adjustments */
    @media (max-width: 768px) {
        .search-input-group {
            flex-direction: column;
            gap: 0.75rem;
            padding: 1rem;
        }
        
        .search-category {
            border-left: none;
            border-top: 1px solid #e9ecef;
            margin-left: 0;
            margin-top: 0.5rem;
            width: 100%;
        }
        
        .search-btn {
            width: 100%;
            justify-content: center;
            margin-right: 0;
        }
    }

.shimmer-wrapper {
    position: relative;
    overflow: hidden;
    background-color: #e9ecef; /* A light grey background for the section */
}

.skeleton-card {
    background-color: #fff;
    border-radius: .375rem;
    padding: 1.5rem;
    height: 100%;
}

.skeleton {
    background-color: #e9ecef;
    border-radius: .25rem;
    animation: pulse 1.5s infinite ease-in-out;
}

.skeleton.img {
    height: 180px;
    margin-bottom: 1rem;
}

.skeleton.title {
    height: 24px;
    width: 70%;
    margin-bottom: 0.75rem;
}

.skeleton.text {
    height: 16px;
    width: 100%;
    margin-bottom: 0.5rem;
}

.skeleton.text-short {
    width: 50%;
}

.shimmer-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(100deg, rgba(255, 255, 255, 0) 20%, rgba(255, 255, 255, 0.8) 50%, rgba(255, 255, 255, 0) 80%);
    animation: shimmer 2s infinite linear;
}

.coming-soon-badge {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    background: rgba(0, 0, 0, 0.7);
    color: white;
    padding: 1rem 2rem;
    border-radius: 10px;
    backdrop-filter: blur(5px);
    text-align: center;
    z-index: 10;
}

@keyframes pulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.6; }
}

@keyframes shimmer {
    0% { transform: translateX(-100%); }
    100% { transform: translateX(100%); }
}


</style>

