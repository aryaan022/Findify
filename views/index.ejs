<%- layout('/layouts/boilerplate') %>

<style>
    
  /* Keyframe for the sweeping light effect */
    @keyframes shimmer {
        0% { transform: translateX(-100%) skewX(-20deg); }
        100% { transform: translateX(200%) skewX(-20deg); }
    }

    /* Keyframe for the subtle pulsing glow */
    @keyframes glow {
        0%, 100% { box-shadow: 0 0 15px rgba(255, 255, 255, 0.1); }
        50% { box-shadow: 0 0 30px rgba(255, 255, 255, 0.25); }
    }

    /* The main container for the new search bar style */
    .search-coming-soon-pro {
        position: relative;
        padding: 0.5rem; /* A little padding around the content */
        background: rgba(255, 255, 255, 0.1); /* Semi-transparent white background */
        backdrop-filter: blur(8px); /* The "glass" effect */
        border-radius: 50px; /* Pill shape */
        border: 1px solid rgba(255, 255, 255, 0.2);
        overflow: hidden; /* Crucial for keeping the shimmer inside */
        animation: glow 3s infinite ease-in-out;
        cursor: not-allowed;
    }

    /* The content (icons and text) inside the search bar */
    .search-overlay-content {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.75rem;
        color: white;
        text-shadow: 0 2px 4px rgba(0,0,0,0.5);
        padding: 0.75rem 1.5rem; /* Make it feel like a real search bar */
    }

    .search-overlay-content h5 {
        margin: 0;
        font-weight: 600;
    }

    /* The shimmer effect element */
    .shimmer-effect {
        position: absolute;
        top: 0;
        left: 0;
        width: 50%;
        height: 100%;
        background: linear-gradient(90deg, rgba(255,255,255,0) 0%, rgba(255,255,255,0.4) 50%, rgba(255,255,255,0) 100%);
        animation: shimmer 3s infinite linear;
        pointer-events: none;
     } /* Make sure it's not interactive */

.shimmer-wrapper {
    position: relative;
    overflow: hidden;
    background-color: #e9ecef; /* A light grey background for the section */
}

.skeleton-card {
    background-color: #fff;
    border-radius: .375rem;
    padding: 1.5rem;
    height: 100%;
}

.skeleton {
    background-color: #e9ecef;
    border-radius: .25rem;
    animation: pulse 1.5s infinite ease-in-out;
}

.skeleton.img {
    height: 180px;
    margin-bottom: 1rem;
}

.skeleton.title {
    height: 24px;
    width: 70%;
    margin-bottom: 0.75rem;
}

.skeleton.text {
    height: 16px;
    width: 100%;
    margin-bottom: 0.5rem;
}

.skeleton.text-short {
    width: 50%;
}

.shimmer-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(100deg, rgba(255, 255, 255, 0) 20%, rgba(255, 255, 255, 0.8) 50%, rgba(255, 255, 255, 0) 80%);
    animation: shimmer 2s infinite linear;
}

.coming-soon-badge {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    background: rgba(0, 0, 0, 0.7);
    color: white;
    padding: 1rem 2rem;
    border-radius: 10px;
    backdrop-filter: blur(5px);
    text-align: center;
    z-index: 10;
}

@keyframes pulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.6; }
}

@keyframes shimmer {
    0% { transform: translateX(-100%); }
    100% { transform: translateX(100%); }
}


</style>

