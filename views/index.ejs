<section class="py-5 position-relative animated-bg">
  <div class="container">
    <!-- Stylish Heading -->
    <div class="text-center mb-5">
      <h2 class="fw-bold display-5 glowing-title">
        üåü Featured Businesses
      </h2>
      <p class="text-light mt-2">Discover the most exciting local businesses near you</p>
    </div>

    <% if (featuredBusinesses && featuredBusinesses.length > 0) { %>
      <div id="featuredCarousel" class="carousel slide" data-bs-ride="carousel" data-bs-interval="3000" data-bs-pause="hover">
        <div class="carousel-inner shadow-lg rounded-4 p-3 bg-white">
          <% featuredBusinesses.forEach((b, index) => { %>
            <% if (index % 3 === 0) { %>
              <div class="carousel-item <%= index === 0 ? 'active' : '' %>">
                <div class="row g-4 justify-content-center">
            <% } %>

            <div class="col-md-6 col-lg-4">
              <div class="card h-100 shadow-sm border-0 position-relative hover-card">

                <!-- Premium Badge -->
                <% if (b.Owner && b.Owner.premiumExpiresAt && new Date(b.Owner.premiumExpiresAt) > new Date()) { %>
                  <span class="badge bg-warning text-dark shadow-sm position-absolute top-0 start-0 m-2">
                    üåü Premium
                  </span>
                <% } %>

                <img src="<%= (b.Image && b.Image.url) ? b.Image.url : 'https://via.placeholder.com/400x200?text=No+Image' %>" 
                     class="card-img-top" 
                     alt="<%= b.Name %>" 
                     style="height: 200px; object-fit: cover; border-top-left-radius: .75rem; border-top-right-radius: .75rem;">

                <div class="card-body d-flex flex-column">
                  <h5 class="card-title fw-bold"><%= b.Name %></h5>
                  <p class="text-primary small mb-2"><%= b.Category %></p>

                  <div class="d-flex align-items-center mb-3">
                    <span class="badge bg-warning text-dark me-2">
                      <i data-lucide="star" style="width:14px; height:14px;"></i>
                      <%= b.avgRating %>
                    </span>
                    <span class="text-muted small">(<%= b.reviewCount %> reviews)</span>
                  </div>

                  <p class="small text-muted mb-2 flex-grow-1">
                    <i data-lucide="map-pin" class="me-2" style="width:16px;"></i>
                    <%= b.address %>
                  </p>

                  <a href="/show/<%= b._id %>" class="btn btn-outline-primary w-100 mt-auto">View Details</a>
                </div>
              </div>
            </div>

            <% if ((index + 1) % 3 === 0 || index === featuredBusinesses.length - 1) { %>
                </div>
              </div>
            <% } %>
          <% }) %>
        </div>

        <!-- Controls -->
        <button class="carousel-control-prev" type="button" data-bs-target="#featuredCarousel" data-bs-slide="prev">
          <span class="carousel-control-prev-icon"></span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#featuredCarousel" data-bs-slide="next">
          <span class="carousel-control-next-icon"></span>
        </button>
      </div>
    <% } else { %>
      <p class="text-center text-light">No featured businesses yet.</p>
    <% } %>
  </div>
</section>

