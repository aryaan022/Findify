<%= layout("/layouts/boilerplate") %>

<!-- Hero Section -->
<section class="hero-section">
    <div class="container">
        <div class="row justify-content-center text-center">
            <div class="col-lg-8">
                <h1 class="display-5 fw-bold text-gradient mb-3">Get in Touch</h1>
                <p class="lead text-muted mb-4">
                    Have questions, feedback, or need support? We'd love to hear from you. 
                    Our team is here to help you succeed.
                </p>
            </div>
        </div>
    </div>
</section>

<!-- Contact Section -->
<section class="py-5">
    <div class="container">
        <div class="row g-5">
            <!-- Contact Form -->
            <div class="col-lg-8">
                <div class="card shadow-lg border-0">
                    <div class="card-body p-5">
                        <h3 class="section-title mb-4">Send Us a Message</h3>
                        
                        <form action="/contact" method="POST" id="contactForm">
                            <div class="row g-4">
                                <div class="col-md-6">
                                    <label for="firstName" class="form-label">
                                        <i data-lucide="user" class="me-1" style="width: 16px; height: 16px;"></i>
                                        First Name <span class="text-danger">*</span>
                                    </label>
                                    <input type="text" class="form-control" id="firstName" name="firstName" 
                                           placeholder="Your first name" required>
                                </div>
                                
                                <div class="col-md-6">
                                    <label for="lastName" class="form-label">
                                        <i data-lucide="user" class="me-1" style="width: 16px; height: 16px;"></i>
                                        Last Name <span class="text-danger">*</span>
                                    </label>
                                    <input type="text" class="form-control" id="lastName" name="lastName" 
                                           placeholder="Your last name" required>
                                </div>
                                
                                <div class="col-md-6">
                                    <label for="email" class="form-label">
                                        <i data-lucide="mail" class="me-1" style="width: 16px; height: 16px;"></i>
                                        Email Address <span class="text-danger">*</span>
                                    </label>
                                    <input type="email" class="form-control" id="email" name="email" 
                                           placeholder="your@email.com" required>
                                </div>
                                
                                <div class="col-md-6">
                                    <label for="phone" class="form-label">
                                        <i data-lucide="phone" class="me-1" style="width: 16px; height: 16px;"></i>
                                        Phone Number
                                    </label>
                                    <input type="tel" class="form-control" id="phone" name="phone" 
                                           placeholder="(555) 123-4567">
                                </div>
                                
                                <div class="col-12">
                                    <label for="subject" class="form-label">
                                        <i data-lucide="tag" class="me-1" style="width: 16px; height: 16px;"></i>
                                        Subject <span class="text-danger">*</span>
                                    </label>
                                    <select class="form-select" id="subject" name="subject" required>
                                        <option value="">Please select a subject</option>
                                        <option value="general">General Inquiry</option>
                                        <option value="support">Technical Support</option>
                                        <option value="business">Business Partnership</option>
                                        <option value="listing">Business Listing Help</option>
                                        <option value="feedback">Feedback & Suggestions</option>
                                        <option value="press">Press & Media</option>
                                        <option value="other">Other</option>
                                    </select>
                                </div>
                                
                                <div class="col-12">
                                    <label for="message" class="form-label">
                                        <i data-lucide="message-square" class="me-1" style="width: 16px; height: 16px;"></i>
                                        Message <span class="text-danger">*</span>
                                    </label>
                                    <textarea class="form-control" id="message" name="message" rows="6" 
                                              placeholder="Tell us how we can help you..." required></textarea>
                                    <div class="form-text">Minimum 20 characters</div>
                                </div>
                                
                                <div class="col-12">
                                    <div class="form-check mb-3">
                                        <input class="form-check-input" type="checkbox" id="newsletter" name="newsletter">
                                        <label class="form-check-label" for="newsletter">
                                            Subscribe to our newsletter for updates and local business features
                                        </label>
                                    </div>
                                    
                                    <div class="form-check mb-4">
                                        <input class="form-check-input" type="checkbox" id="agreeTerms" name="agreeTerms" required>
                                        <label class="form-check-label" for="agreeTerms">
                                            I agree to the <a href="/privacy" target="_blank" class="text-decoration-none">Privacy Policy</a> 
                                            and <a href="/terms" target="_blank" class="text-decoration-none">Terms of Service</a> 
                                            <span class="text-danger">*</span>
                                        </label>
                                    </div>
                                    
                                    <div class="d-grid">
                                        <button type="submit" class="btn btn-primary btn-lg">
                                            <i data-lucide="send" class="me-2"></i>
                                            Send Message
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            
            <!-- Contact Information -->
            <div class="col-lg-4">
                <!-- Contact Details -->
                <div class="card shadow-sm border-0 mb-4">
                    <div class="card-body p-4">
                        <h5 class="fw-bold mb-4">
                            <i data-lucide="info" class="me-2 text-primary"></i>
                            Contact Information
                        </h5>
                        
                        <div class="mb-4">
                            <div class="d-flex align-items-start mb-3">
                                <i data-lucide="map-pin" class="text-primary me-3 mt-1" style="width: 20px; height: 20px;"></i>
                                <div>
                                    <strong class="d-block">Address</strong>
                                    <span class="text-muted">
                                        123 Business District<br>
                                        Suite 456<br>
                                        San Francisco, CA 94105
                                    </span>
                                </div>
                            </div>
                            
                            <div class="d-flex align-items-center mb-3">
                                <i data-lucide="phone" class="text-primary me-3" style="width: 20px; height: 20px;"></i>
                                <div>
                                    <strong class="d-block">Phone</strong>
                                    <a href="tel:+1-555-123-4567" class="text-muted text-decoration-none">
                                        +1 (555) 123-4567
                                    </a>
                                </div>
                            </div>
                            
                            <div class="d-flex align-items-center mb-3">
                                <i data-lucide="mail" class="text-primary me-3" style="width: 20px; height: 20px;"></i>
                                <div>
                                    <strong class="d-block">Email</strong>
                                    <a href="mailto:hello@localbizdirectory.com" class="text-muted text-decoration-none">
                                        hello@localbizdirectory.com
                                    </a>
                                </div>
                            </div>
                            
                            <div class="d-flex align-items-center">
                                <i data-lucide="clock" class="text-primary me-3" style="width: 20px; height: 20px;"></i>
                                <div>
                                    <strong class="d-block">Business Hours</strong>
                                    <span class="text-muted">
                                        Monday - Friday: 9:00 AM - 6:00 PM PST<br>
                                        Weekend: Emergency support only
                                    </span>
                                </div>
                            </div>
                        </div>
                        
                        <hr>
                        
                        <h6 class="fw-bold mb-3">Follow Us</h6>
                        <div class="d-flex gap-2">
                            <a href="#" class="btn btn-outline-primary btn-sm">
                                <i data-lucide="facebook" style="width: 16px; height: 16px;"></i>
                            </a>
                            <a href="#" class="btn btn-outline-primary btn-sm">
                                <i data-lucide="twitter" style="width: 16px; height: 16px;"></i>
                            </a>
                            <a href="#" class="btn btn-outline-primary btn-sm">
                                <i data-lucide="instagram" style="width: 16px; height: 16px;"></i>
                            </a>
                            <a href="#" class="btn btn-outline-primary btn-sm">
                                <i data-lucide="linkedin" style="width: 16px; height: 16px;"></i>
                            </a>
                        </div>
                    </div>
                </div>
                
                <!-- FAQ Quick Links -->
                <div class="card shadow-sm border-0 mb-4">
                    <div class="card-body p-4">
                        <h6 class="fw-bold mb-3">
                            <i data-lucide="help-circle" class="me-2 text-primary"></i>
                            Quick Help
                        </h6>
                        <ul class="list-unstyled mb-0">
                            <li class="mb-2">
                                <a href="/faq" class="text-decoration-none text-muted">
                                    <i data-lucide="chevron-right" class="me-2" style="width: 14px; height: 14px;"></i>
                                    Frequently Asked Questions
                                </a>
                            </li>
                            <li class="mb-2">
                                <a href="/help/business-owners" class="text-decoration-none text-muted">
                                    <i data-lucide="chevron-right" class="me-2" style="width: 14px; height: 14px;"></i>
                                    Help for Business Owners
                                </a>
                            </li>
                            <li class="mb-2">
                                <a href="/help/users" class="text-decoration-none text-muted">
                                    <i data-lucide="chevron-right" class="me-2" style="width: 14px; height: 14px;"></i>
                                    Help for Users
                                </a>
                            </li>
                            <li class="mb-2">
                                <a href="/privacy" class="text-decoration-none text-muted">
                                    <i data-lucide="chevron-right" class="me-2" style="width: 14px; height: 14px;"></i>
                                    Privacy Policy
                                </a>
                            </li>
                            <li>
                                <a href="/terms" class="text-decoration-none text-muted">
                                    <i data-lucide="chevron-right" class="me-2" style="width: 14px; height: 14px;"></i>
                                    Terms of Service
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
                
                <!-- Response Time -->
                <div class="card bg-light border-0">
                    <div class="card-body p-4 text-center">
                        <i data-lucide="clock" class="text-primary mb-2" style="width: 32px; height: 32px;"></i>
                        <h6 class="fw-bold mb-2">Response Time</h6>
                        <p class="text-muted small mb-0">
                            We typically respond to all inquiries within 24 hours during business days. 
                            For urgent matters, please call us directly.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Map Section -->
<section class="py-5 bg-light">
    <div class="container">
        <div class="text-center mb-4">
            <h3 class="section-title">Find Our Office</h3>
            <p class="text-muted">Visit us at our headquarters in the heart of San Francisco</p>
        </div>
        
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="map-container shadow-sm">
                    <div class="text-center">
                        <i data-lucide="map-pin" class="mb-3" style="width: 48px; height: 48px;"></i>
                        <h5>LocalBiz Finder Headquarters</h5>
                        <p class="mb-2">123 Business District, Suite 456</p>
                        <p class="text-muted">San Francisco, CA 94105</p>
                        <div class="mt-4">
                            <button class="btn btn-primary">
                                <i data-lucide="directions" class="me-2"></i>
                                Get Directions
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    // Form validation
    document.getElementById('contactForm').addEventListener('submit', function(e) {
        const message = document.getElementById('message').value;
        
        if (message.length < 20) {
            e.preventDefault();
            alert('Message must be at least 20 characters long.');
            return;
        }
        // allow normal submit to server
    });
    
    // Character counter for message
    document.getElementById('message').addEventListener('input', function(e) {
        const length = e.target.value.length;
        const minLength = 20;
        
        if (length < minLength) {
            e.target.classList.add('is-invalid');
        } else {
            e.target.classList.remove('is-invalid');
        }
    });
    
    // Initialize Lucide icons
    lucide.createIcons();
</script>