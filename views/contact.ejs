<%- layout("/layouts/boilerplate") %>

<style>
    /* Styles for interactive form fields */
    .form-group .form-control {
        transition: border-color 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
    }
    .form-group:focus-within label i {
        color: var(--bs-primary);
    }
    .form-group:focus-within .form-control {
        border-color: var(--bs-primary);
        box-shadow: 0 0 0 0.25rem rgba(var(--bs-primary-rgb), 0.25);
    }
    
    /* Style for the submit button hover effect */
    .btn-submit:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 15px rgba(var(--bs-primary-rgb), 0.3);
    }

    /* NEW: Styling for the animated 'Coming Soon' button */
    @keyframes pulse-glow {
      0%, 100% {
        box-shadow: 0 0 8px rgba(var(--bs-secondary-rgb), 0.2);
      }
      50% {
        box-shadow: 0 0 16px rgba(var(--bs-secondary-rgb), 0.4);
      }
    }
    .btn-coming-soon {
        cursor: not-allowed;
        animation: pulse-glow 2.5s infinite ease-in-out;
    }
</style>

<section class="py-5 text-center bg-light fade-in-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <h1 class="display-4 fw-bold text-gradient mb-3">Get in Touch</h1>
                <p class="lead text-muted">
                    Have questions, feedback, or need support? We'd love to hear from you. 
                    Our team is here to help you succeed.
                </p>
            </div>
        </div>
    </div>
</section>

<section class="py-5 fade-in-section" style="animation-delay: 0.2s;">
    <div class="container">
        <div class="row g-5">
            <div class="col-lg-8">
                <div class="card shadow-lg border-0 h-100">
                    <div class="card-body p-4 p-md-5">
                        <h3 class="fw-bold mb-4">Send Us a Message</h3>
                        <form action="/contact" method="POST" id="contactForm">
                            <div class="row g-4">
                                <div class="col-md-6 form-group">
                                    <label for="firstName" class="form-label"><i data-lucide="user" class="me-1"></i> First Name <span class="text-danger">*</span></label>
                                    <input type="text" class="form-control" id="firstName" name="firstName" placeholder="e.g., John" required>
                                </div>
                                <div class="col-md-6 form-group">
                                    <label for="lastName" class="form-label"><i data-lucide="user" class="me-1"></i> Last Name <span class="text-danger">*</span></label>
                                    <input type="text" class="form-control" id="lastName" name="lastName" placeholder="e.g., Doe" required>
                                </div>
                                <div class="col-md-6 form-group">
                                    <label for="email" class="form-label"><i data-lucide="mail" class="me-1"></i> Email Address <span class="text-danger">*</span></label>
                                    <input type="email" class="form-control" id="email" name="email" placeholder="your@email.com" required>
                                </div>
                                <div class="col-md-6 form-group">
                                    <label for="phone" class="form-label"><i data-lucide="phone" class="me-1"></i> Phone Number</label>
                                    <input type="tel" class="form-control" id="phone" name="phone" placeholder="(Optional)">
                                </div>
                                <div class="col-12 form-group">
                                    <label for="subject" class="form-label"><i data-lucide="tag" class="me-1"></i> Subject <span class="text-danger">*</span></label>
                                    <select class="form-select" id="subject" name="subject" required>
                                        <option value="">Please select a subject</option>
                                        <option value="general">General Inquiry</option>
                                        <option value="support">Technical Support</option>
                                        <option value="business">Business Partnership</option>
                                        <option value="feedback">Feedback & Suggestions</option>
                                        <option value="other">Other</option>
                                    </select>
                                </div>
                                <div class="col-12 form-group">
                                    <label for="message" class="form-label"><i data-lucide="message-square" class="me-1"></i> Message <span class="text-danger">*</span></label>
                                    <textarea class="form-control" id="message" name="message" rows="5" placeholder="Tell us how we can help you..." required></textarea>
                                </div>
                                <div class="col-12">
                                    <div class="d-grid">
                                        <button type="button" class="btn btn-secondary btn-lg btn-coming-soon" disabled 
                                                data-bs-toggle="tooltip" data-bs-placement="top" 
                                                title="Our team is working on it!">
                                            <i data-lucide="lock" class="me-2"></i> Coming Soon
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            
            <div class="col-lg-4">
                <div class="bg-light p-4 rounded-3 h-100">
                    <h4 class="fw-bold mb-4">Contact Details</h4>
                    <div class="d-flex mb-4">
                        <i data-lucide="map-pin" class="text-primary me-3 mt-1" style="width: 20px;"></i>
                        <div>
                            <strong class="d-block">Our Office</strong>
                            <span class="text-muted small">Lovely Professional University<br>Jalandhar Punjab, India</span>
                        </div>
                    </div>
                    <div class="d-flex mb-4">
                        <i data-lucide="mail" class="text-primary me-3 mt-1" style="width: 20px;"></i>
                        <div>
                            <strong class="d-block">Email Us</strong>
                            <a href="mailto:support@localify.com" class="text-muted text-decoration-none small">support@localify.com</a>
                        </div>
                    </div>
                    <div class="d-flex mb-4">
                        <i data-lucide="phone" class="text-primary me-3 mt-1" style="width: 20px;"></i>
                        <div>
                            <strong class="d-block">Call Us</strong>
                            <a href="tel:+917037169747" class="text-muted text-decoration-none small">+91 7037169747</a>
                        </div>
                    </div>
                    <hr>
                    <h6 class="fw-bold mb-3">Follow Us</h6>
                    <div class="d-flex gap-2">
                        <a href="#" class="btn btn-outline-secondary btn-sm"><i data-lucide="facebook"></i></a>
                        <a href="#" class="btn btn-outline-secondary btn-sm"><i data-lucide="twitter"></i></a>
                        <a href="https://www.instagram.com/findify_official/" class="btn btn-outline-secondary btn-sm"><i data-lucide="instagram"></i></a>
                        <a href="www.linkedin.com/in/aryan022" class="btn btn-outline-secondary btn-sm"><i data-lucide="linkedin"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    // Initialize Lucide icons
    lucide.createIcons();
    
    // NEW: Initialize Bootstrap Tooltips for the hover effect
    var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
    var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
      return new bootstrap.Tooltip(tooltipTriggerEl)
    })
</script>
<script>
document.addEventListener("DOMContentLoaded", function() {
    const sections = document.querySelectorAll('.fade-in-section');
    const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
            if (entry.isIntersecting) {
                entry.target.style.animationPlayState = 'running';
                observer.unobserve(entry.target);
            }
        });
    }, { threshold: 0.1 });
    sections.forEach(section => { observer.observe(section); });
});
</script>