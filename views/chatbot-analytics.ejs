<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chatbot Analytics Dashboard - Findify</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
            background: linear-gradient(135deg, #0d003b 0%, #4d005f 50%, #87005f 100%);
            color: #fff;
            min-height: 100vh;
            padding: 20px;
        }

        .dashboard-container {
            max-width: 1400px;
            margin: 0 auto;
        }

        .header {
            text-align: center;
            margin-bottom: 30px;
        }

        .header h1 {
            font-size: 2.5rem;
            margin-bottom: 10px;
            background: linear-gradient(45deg, #6a5af9, #8a7df8);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .header p {
            color: rgba(255, 255, 255, 0.7);
            font-size: 1.1rem;
        }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }

        .stat-card {
            background: rgba(255, 255, 255, 0.05);
            backdrop-filter: blur(20px);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 16px;
            padding: 24px;
            transition: all 0.3s ease;
        }

        .stat-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 40px rgba(106, 90, 249, 0.3);
            border-color: rgba(106, 90, 249, 0.4);
        }

        .stat-card h3 {
            font-size: 0.9rem;
            color: rgba(255, 255, 255, 0.7);
            margin-bottom: 10px;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .stat-card .value {
            font-size: 2.5rem;
            font-weight: 700;
            background: linear-gradient(45deg, #6a5af9, #8a7df8);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            margin-bottom: 5px;
        }

        .stat-card .change {
            font-size: 0.85rem;
            color: rgba(255, 255, 255, 0.6);
        }

        .stat-card .change.positive {
            color: #4ade80;
        }

        .section {
            background: rgba(255, 255, 255, 0.05);
            backdrop-filter: blur(20px);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 16px;
            padding: 24px;
            margin-bottom: 30px;
        }

        .section h2 {
            font-size: 1.5rem;
            margin-bottom: 20px;
            color: #fff;
        }

        .chart-container {
            height: 300px;
            position: relative;
            margin-top: 20px;
        }

        .bar-chart {
            display: flex;
            align-items: flex-end;
            justify-content: space-around;
            height: 100%;
            gap: 8px;
        }

        .bar {
            flex: 1;
            background: linear-gradient(180deg, #6a5af9 0%, #8a7df8 100%);
            border-radius: 8px 8px 0 0;
            min-height: 10px;
            position: relative;
            transition: all 0.3s ease;
        }

        .bar:hover {
            opacity: 0.8;
            transform: scaleY(1.05);
        }

        .bar-label {
            position: absolute;
            bottom: -25px;
            left: 50%;
            transform: translateX(-50%);
            font-size: 0.7rem;
            color: rgba(255, 255, 255, 0.6);
        }

        .popular-queries {
            list-style: none;
        }

        .popular-queries li {
            padding: 12px;
            margin-bottom: 8px;
            background: rgba(255, 255, 255, 0.03);
            border-radius: 8px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            transition: all 0.2s ease;
        }

        .popular-queries li:hover {
            background: rgba(255, 255, 255, 0.08);
            transform: translateX(5px);
        }

        .query-text {
            flex: 1;
            color: #fff;
        }

        .query-count {
            background: rgba(106, 90, 249, 0.2);
            padding: 4px 12px;
            border-radius: 12px;
            font-size: 0.85rem;
            color: #8a7df8;
            font-weight: 600;
        }

        .response-types {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 15px;
        }

        .response-type {
            background: rgba(255, 255, 255, 0.03);
            padding: 16px;
            border-radius: 12px;
            text-align: center;
        }

        .response-type .label {
            font-size: 0.85rem;
            color: rgba(255, 255, 255, 0.6);
            margin-bottom: 8px;
        }

        .response-type .count {
            font-size: 1.8rem;
            font-weight: 700;
            color: #6a5af9;
        }

        .sentiment-chart {
            display: flex;
            gap: 15px;
            margin-top: 20px;
        }

        .sentiment-bar {
            flex: 1;
            background: rgba(255, 255, 255, 0.05);
            border-radius: 12px;
            padding: 20px;
            text-align: center;
        }

        .sentiment-bar.positive {
            border: 2px solid #4ade80;
        }

        .sentiment-bar.neutral {
            border: 2px solid #fbbf24;
        }

        .sentiment-bar.negative {
            border: 2px solid #f87171;
        }

        .sentiment-bar .percentage {
            font-size: 2rem;
            font-weight: 700;
            margin-bottom: 8px;
        }

        .sentiment-bar.positive .percentage {
            color: #4ade80;
        }

        .sentiment-bar.neutral .percentage {
            color: #fbbf24;
        }

        .sentiment-bar.negative .percentage {
            color: #f87171;
        }

        .refresh-btn {
            position: fixed;
            bottom: 30px;
            right: 30px;
            background: linear-gradient(135deg, #6a5af9, #8a7df8);
            border: none;
            width: 60px;
            height: 60px;
            border-radius: 50%;
            color: #fff;
            font-size: 24px;
            cursor: pointer;
            box-shadow: 0 10px 30px rgba(106, 90, 249, 0.4);
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .refresh-btn:hover {
            transform: scale(1.1) rotate(90deg);
            box-shadow: 0 15px 40px rgba(106, 90, 249, 0.6);
        }

        .loading {
            text-align: center;
            padding: 40px;
            color: rgba(255, 255, 255, 0.7);
        }

        .auto-refresh {
            display: flex;
            align-items: center;
            gap: 10px;
            margin-bottom: 20px;
        }

        .auto-refresh label {
            display: flex;
            align-items: center;
            gap: 8px;
            cursor: pointer;
            color: rgba(255, 255, 255, 0.7);
        }

        .toggle-switch {
            width: 44px;
            height: 24px;
            background: rgba(255, 255, 255, 0.2);
            border-radius: 12px;
            position: relative;
            transition: all 0.3s ease;
        }

        .toggle-switch.active {
            background: #6a5af9;
        }

        .toggle-switch::after {
            content: '';
            position: absolute;
            width: 18px;
            height: 18px;
            background: #fff;
            border-radius: 50%;
            top: 3px;
            left: 3px;
            transition: all 0.3s ease;
        }

        .toggle-switch.active::after {
            left: 23px;
        }
    </style>
</head>
<body>
    <div class="dashboard-container">
        <div class="header">
            <h1>ðŸ¤– Real-Time Chatbot Analytics</h1>
            <p>Live insights into Findify AI Assistant performance</p>
        </div>

        <div class="auto-refresh">
            <label>
                <input type="checkbox" id="autoRefresh" checked>
                <span class="toggle-switch"></span>
                <span>Auto-refresh (3s)</span>
            </label>
        </div>

        <div id="loading" class="loading" style="display: none;">
            <p>Loading analytics...</p>
        </div>

        <div id="dashboard-content">
            <!-- Content will be dynamically loaded -->
        </div>
    </div>

    <button class="refresh-btn" id="refreshBtn" title="Refresh">ðŸ”„</button>

    <script>
        let autoRefreshInterval = null;

        function formatNumber(num) {
            return new Intl.NumberFormat().format(num);
        }

        function formatTime(ms) {
            return `${ms.toFixed(0)}ms`;
        }

        function renderDashboard(data) {
            const container = document.getElementById('dashboard-content');
            
            const sentimentTotal = data.sentiment.total || 1;
            const positivePct = ((data.sentiment.positive / sentimentTotal) * 100).toFixed(1);
            const neutralPct = ((data.sentiment.neutral / sentimentTotal) * 100).toFixed(1);
            const negativePct = ((data.sentiment.negative / sentimentTotal) * 100).toFixed(1);

            // Find max count for chart scaling
            const maxCount = Math.max(...data.queriesByHour.map(h => h.count), 1);

            container.innerHTML = `
                <div class="stats-grid">
                    <div class="stat-card">
                        <h3>Total Queries</h3>
                        <div class="value">${formatNumber(data.overview.totalQueries)}</div>
                        <div class="change">All time</div>
                    </div>
                    <div class="stat-card">
                        <h3>Queries/Minute</h3>
                        <div class="value">${data.overview.queriesPerMinute}</div>
                        <div class="change">Live rate</div>
                    </div>
                    <div class="stat-card">
                        <h3>Queries/Hour</h3>
                        <div class="value">${data.overview.queriesPerHour}</div>
                        <div class="change">Current hour</div>
                    </div>
                    <div class="stat-card">
                        <h3>Unique Users</h3>
                        <div class="value">${formatNumber(data.overview.uniqueUsers)}</div>
                        <div class="change">Total unique</div>
                    </div>
                    <div class="stat-card">
                        <h3>Success Rate</h3>
                        <div class="value">${data.overview.successRate}%</div>
                        <div class="change">Business searches</div>
                    </div>
                    <div class="stat-card">
                        <h3>Avg Response Time</h3>
                        <div class="value">${formatTime(parseFloat(data.overview.averageResponseTime))}</div>
                        <div class="change">Response speed</div>
                    </div>
                </div>

                <div class="section">
                    <h2>ðŸ“Š Response Types Distribution</h2>
                    <div class="response-types">
                        <div class="response-type">
                            <div class="label">Quick Replies</div>
                            <div class="count">${formatNumber(data.responseTypes.quickReplies)}</div>
                        </div>
                        <div class="response-type">
                            <div class="label">Business Searches</div>
                            <div class="count">${formatNumber(data.responseTypes.businessSearches)}</div>
                        </div>
                        <div class="response-type">
                            <div class="label">AI Generated</div>
                            <div class="count">${formatNumber(data.responseTypes.aiGenerated)}</div>
                        </div>
                        <div class="response-type">
                            <div class="label">Fallbacks</div>
                            <div class="count">${formatNumber(data.responseTypes.fallbacks)}</div>
                        </div>
                    </div>
                </div>

                <div class="section">
                    <h2>ðŸ“ˆ Queries by Hour</h2>
                    <div class="chart-container">
                        <div class="bar-chart">
                            ${data.queriesByHour.map(h => `
                                <div class="bar" style="height: ${(h.count / maxCount) * 100}%" title="${h.count} queries at ${h.hour}:00">
                                    <div class="bar-label">${h.hour}:00</div>
                                </div>
                            `).join('')}
                        </div>
                    </div>
                </div>

                <div class="section">
                    <h2>ðŸ’¬ User Sentiment Analysis</h2>
                    <div class="sentiment-chart">
                        <div class="sentiment-bar positive">
                            <div class="percentage">${positivePct}%</div>
                            <div class="label">Positive</div>
                            <div style="font-size: 0.85rem; margin-top: 5px; color: rgba(255,255,255,0.6);">${data.sentiment.positive} queries</div>
                        </div>
                        <div class="sentiment-bar neutral">
                            <div class="percentage">${neutralPct}%</div>
                            <div class="label">Neutral</div>
                            <div style="font-size: 0.85rem; margin-top: 5px; color: rgba(255,255,255,0.6);">${data.sentiment.neutral} queries</div>
                        </div>
                        <div class="sentiment-bar negative">
                            <div class="percentage">${negativePct}%</div>
                            <div class="label">Negative</div>
                            <div style="font-size: 0.85rem; margin-top: 5px; color: rgba(255,255,255,0.6);">${data.sentiment.negative} queries</div>
                        </div>
                    </div>
                </div>

                <div class="section">
                    <h2>ðŸ”¥ Top Popular Queries</h2>
                    <ul class="popular-queries">
                        ${data.popularQueries.length > 0 
                            ? data.popularQueries.map(q => `
                                <li>
                                    <span class="query-text">${q.query}</span>
                                    <span class="query-count">${q.count} times</span>
                                </li>
                            `).join('')
                            : '<li style="color: rgba(255,255,255,0.6);">No queries yet</li>'
                        }
                    </ul>
                </div>

                <div class="section">
                    <h2>âš¡ Performance Metrics</h2>
                    <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 15px;">
                        <div class="stat-card">
                            <h3>Successful Searches</h3>
                            <div class="value">${formatNumber(data.performance.successfulSearches)}</div>
                        </div>
                        <div class="stat-card">
                            <h3>Business Results</h3>
                            <div class="value">${formatNumber(data.performance.businessResults)}</div>
                        </div>
                        <div class="stat-card">
                            <h3>AI Fallbacks</h3>
                            <div class="value">${formatNumber(data.performance.aiFallbacks)}</div>
                        </div>
                        <div class="stat-card">
                            <h3>Uptime</h3>
                            <div class="value">${parseFloat(data.overview.uptimeHours).toFixed(1)}h</div>
                        </div>
                    </div>
                </div>
            `;
        }

        async function fetchAnalytics() {
            try {
                document.getElementById('loading').style.display = 'block';
                const response = await fetch('/api/chatbot/analytics');
                const data = await response.json();
                renderDashboard(data);
                document.getElementById('loading').style.display = 'none';
            } catch (error) {
                console.error('Error fetching analytics:', error);
                document.getElementById('loading').innerHTML = '<p style="color: #f87171;">Error loading analytics</p>';
            }
        }

        // Toggle auto-refresh
        document.getElementById('autoRefresh').addEventListener('change', (e) => {
            const toggle = e.target.nextElementSibling;
            if (e.target.checked) {
                toggle.classList.add('active');
                autoRefreshInterval = setInterval(fetchAnalytics, 3000);
            } else {
                toggle.classList.remove('active');
                if (autoRefreshInterval) {
                    clearInterval(autoRefreshInterval);
                    autoRefreshInterval = null;
                }
            }
        });

        // Manual refresh
        document.getElementById('refreshBtn').addEventListener('click', fetchAnalytics);

        // Initial load
        fetchAnalytics();
        
        // Start auto-refresh if enabled
        if (document.getElementById('autoRefresh').checked) {
            document.querySelector('.toggle-switch').classList.add('active');
            autoRefreshInterval = setInterval(fetchAnalytics, 3000);
        }
    </script>
</body>
</html>


